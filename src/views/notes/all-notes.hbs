<div class="row">
  {{#each notes}}
  <div class="mb-4 col-xs-12 col-md-4 ">
    <div class="card CardContainer">
      <div class="card-body d-flex flex-column justify-content-between">        
        <div class="overflow-hidden mb-2">
          <h4 class="card-title d-flex justify-content-between align-items-start">
            {{title}} 
            <a href="/notes/edit/{{_id}}">
              <i class="fas fa-edit"></i>
            </a>
          </h4>
          <p>{{description}}</p>
        </div>
        
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit" class="btn btn-danger btn-block btn-sm">Delete</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hello {{user.name}}</h1>
      <p class="lead">
        There are not notes yet.
      </p>
      <a href="/notes/add" class="btn btn-success btn-block">Create one!</a>
    </div>
  </div>
  {{/each}}
  <a href="/notes/add" title="Add new note" class="btn btn-primary btn-lg rounded-circle" style="position: fixed; bottom: 20px; right: 20px;">
  <i class="fas fa-plus"></i>
</a>
</div>